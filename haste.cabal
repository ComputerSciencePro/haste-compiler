Name:           haste-compiler
Version:        0.1
License:        GPL-3
License-File:   LICENSE
Synopsis:       HASkell To Ecmascript compiler
Description:    HASkell To Ecmascript compiler
Cabal-Version:  >= 1.10
Build-Type:     Simple
Author:         Anton Ekblad <anton@ekblad.cc>
Copyright:      Anton Ekblad <anton@ekblad.cc>
Maintainer:     Anton Ekblad <anton@ekblad.cc>
Homepage:       http://ekblad.cc
Bug-reports:    http://ekblad.cc
Stability:      Experimental

Data-Dir:
    lib

Data-Files:
    rts.js
    stdlib.js
    eval.js
    eval-trampoline.js
    MVar.js
    StableName.js

Executable haste-boot
    Main-Is: haste-boot.hs
    Other-Modules:
        Version
    Hs-Source-Dirs: src
    GHC-Options: -Wall -O2
    Build-Depends:
        ghc,
        base,
        directory,
        process,
        bytestring,
        tar,
        bzlib,
        zip-archive,
        curl,
        download-curl,
        filepath
    Default-Language: Haskell98

Executable hastec
    Hs-Source-Dirs: src
    GHC-Options: -Wall -O2
    Build-Depends:
        base,
        ghc-prim,
        ghc >= 7.2,
        mtl,
        cereal,
        containers,
        bytestring,
        filepath,
        directory,
        array,
        ghc-paths,
        process,
        unix
    Main-Is:
        Main.hs
    Other-Modules:
        Args
        ArgSpecs
        Version
        CodeGen.Javascript
        CodeGen.Javascript.Config
        CodeGen.Javascript.AST
        CodeGen.Javascript.Monad
        CodeGen.Javascript.StgGen
        CodeGen.Javascript.Optimize
        CodeGen.Javascript.PrintJS
        CodeGen.Javascript.PrettyM
        CodeGen.Javascript.PrimOps
        CodeGen.Javascript.Module
        CodeGen.Javascript.Linker
        CodeGen.Javascript.Builtins
        CodeGen.Javascript.Errors
        CodeGen.Javascript.Traverse
        CodeGen.Javascript.Replace
    default-language: Haskell98

Executable hastecat
    Main-Is: jspcat.hs
    Hs-Source-Dirs: src
    Build-Depends:
        base,
        cereal,
        ghc-prim,
        ghc,
        containers,
        filepath,
        directory,
        bytestring,
        mtl,
        array
    default-language: Haskell98

Executable haste-inst
    Main-Is: haste-inst.hs
    Hs-Source-Dirs: src
    Build-Depends:
        base,
        filepath,
        process,
        directory
    default-language: Haskell98

Executable haste-pkg
    Main-Is: haste-pkg.hs
    Hs-Source-Dirs: src
    Build-Depends:
        base,
        process,
        filepath,
        directory
    default-language: Haskell98

Executable haste-install-his
    Main-Is: haste-install-his.hs
    Hs-Source-Dirs: src
    Build-Depends:
        base,
        filepath,
        directory,
        process
    default-language: Haskell98

Executable haste-copy-pkg
    Main-Is: haste-copy-pkg.hs
    Hs-Source-Dirs: src
    Build-Depends:
        base,
        filepath,
        directory,
        process
    default-language: Haskell98
